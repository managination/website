#!/bin/sh

set -e

echo "=== CI Build Script ==="
echo ""

# Build Jekyll site
echo "Step 1: Building Jekyll site..."
jekyll build
echo "✅ Jekyll build complete"
echo ""

# Gem build
echo "Step 2: Building gem..."
gem build jekyll-theme-cayman.gemspec
echo "✅ Gem build complete"
echo ""

echo "=== ✅ CI Build successful! ==="
echo ""
echo "Note: HTML validation and linting skipped for local builds."
echo "These checks will run automatically in GitHub Actions CI."
